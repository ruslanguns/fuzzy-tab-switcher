{
  "manifest_version": 3,
  "name": "Fuzzy Tab Switcher",
  "description": "Fast fuzzy search across all open tabs with Cmd+Shift+K",
  "version": "1.0.0",
  "author": "Ruslan Gonzalez <ruslanguns@gmail.com>",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      }
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
